<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@android:color/white"
        android:id="@+id/relativeLayout"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionbar_height"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="match_parent"
                android:id="@+id/ivLocation"
                android:src="@drawable/ic_ab_location"
                android:background="@drawable/btn_touch_generic"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_location"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/shade_text_dark_strong"
                android:id="@+id/textView"
                android:layout_toEndOf="@+id/ivLocation"
                android:layout_above="@+id/tvLocation"
                android:layout_toRightOf="@+id/ivLocation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/shade_text_dark_strong"
                android:id="@+id/tvLocation"
                android:layout_toEndOf="@+id/ivLocation"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">

            <ImageButton
                android:layout_width="@dimen/actionbar_height"
                android:layout_height="match_parent"
                android:src="@drawable/ic_ab_search"
                android:background="@drawable/btn_touch_generic"
                android:id="@+id/ivSearch"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>