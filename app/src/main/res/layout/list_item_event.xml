<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:padding="@dimen/zero"
        android:layout_margin="@dimen/zero"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/card_normal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/thumb"
            android:src="@drawable/marathon1"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="KL Marathon 2014"
            android:textColor="@color/shade_text_medium"
            android:textStyle="bold"
            android:id="@+id/textTitle"
            android:layout_alignTop="@+id/imageView"
            android:layout_toEndOf="@+id/thumb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/shade_text_dark"
            android:text="Lorem Ipsum. Lorem Ipsum"
            android:id="@+id/textDesc"
            android:layout_below="@+id/textTitle"
            android:layout_toEndOf="@+id/thumb" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgVisibility"
            android:layout_margin="5dp"
            android:src="@drawable/event_public"
            android:layout_below="@+id/textDesc"
            android:layout_toEndOf="@+id/thumb"
            android:layout_alignStart="@+id/textView2" />

        <TextView
            android:id="@+id/textPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Public"
            android:layout_marginLeft="10dp"
            android:textAllCaps="true"
            android:textColor="@color/shade_secondary"
            android:layout_toEndOf="@+id/imgVisibility"
            android:layout_alignTop="@+id/imgVisibility" />
    </RelativeLayout>
</RelativeLayout>